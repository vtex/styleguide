{
  "extends": [
    "vtex",
    "vtex-react",
    "plugin:import/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["import", "lodash"],
  "rules": {
    "import/no-unresolved": [
      "error",
      {
        "commonjs": true,
        "amd": true,
        "ignore": ["^([a-zA-Z@]+[-\\.]?)+"]
      }
    ],
    "lodash/import-scope": [2, "method"],
    // Rules that conflict with Prettier.
    // To verify conflicting rules, run:
    // $ npm run prettier-conflict-check
    "react/jsx-curly-spacing": 0,
    "react/jsx-equals-spacing": 0,
    "react/jsx-indent": 0,
    "react/jsx-indent-props": 0,
    "react/jsx-tag-spacing": 0,
    "react/jsx-wrap-multilines": 0
  },
  "overrides": [
    {
      // Rules for autogenerated files,
      // They may need to be bypass some rules.
      // E.g.: EXPERIMENTAL_ needs camelcase bypass 
      "files": ["react/*.js"],
      "rules": {
        "camelcase": "off",
        "import/default": "off"
      }
    }
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "jest": true
  },
  "globals": {
    "__DEV__": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
